<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-navitia-sdk-ui" version="2.4.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>NavitiaSDKUI</name>

	<preference name="ARTIFACTORY_USERNAME"/>
	<preference name="ARTIFACTORY_PASSWORD" />
	<preference name="ARTIFACTORY_URL" default="https://kisiodigital.jfrog.io/kisiodigital/" />
	<preference name="ARTIFACTORY_ANDROID_REPO_RELEASE" default="android-release" />
	<preference name="ARTIFACTORY_ANDROID_REPO_SNAPSHOT" default="android-snapshot" />
	<hook src="hooks/add_artifactory_conf.js" type="before_prepare" />

    <js-module name="NavitiaSDKUI" src="www/NavitiaSDKUI.js">
        <clobbers target="NavitiaSDKUI" />
    </js-module>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="NavitiaSDKUI">
                <param name="ios-package" value="CDVNavitiaSDKUI" />
            </feature>
        </config-file>
        <source-file src="src/ios/CDVNavitiaSDKUI.swift" />

        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git"/>
                <source url="https://github.com/CanalTP/Podspecs"/>
            </config>
            <pods use-frameworks="true">
                <pod name="NavitiaSDKUI" spec="3.3.0" />
            </pods>
        </podspec>

		<hook src="hooks/add_buildPhase.js" type="after_platform_add" />
    </platform>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="NavitiaSDKUI">
                <param name="android-package" value="com.kisio.navitia.sdk.ui.journey.cordova.JourneysUICordovaPlugin"/>
            </feature>
        </config-file>
        <framework src="src/android/build.gradle" custom="true" type="gradleReference" />
        <source-file src="src/android/src/main/java/com/kisio/navitia/sdk/ui/journey/cordova/JourneysUICordovaPlugin.java" target-dir="src/com/kisio/navitia/sdk/ui/journey/cordova" />
    </platform>
    
    <dependency id="cordova-plugin-androidx" version="1.0.2" />
    <dependency id="cordova-plugin-androidx-adapter" version="1.1.0" />
</plugin>
